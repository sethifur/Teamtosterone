            </th>
            <th>
                @Html.DisplayFor(model => item.ClassroomId)
            </th>
            <th>
                @Html.DisplayFor(model => item.InstructorId)
            </th>
            <th>
                @Html.DisplayFor(model => item.ScheduleId)
            </th>
