            <th>                          
                @Html.DisplayFor(model => item.EndTime)
            </th>                         
            <th>                          
                @Html.DisplayFor(model => item.StartDate)
            </th>                         
            <th>                          
                @Html.DisplayFor(model => item.EndDate)
            </th>                         
            <th>                          
                @Html.DisplayFor(model => item.DaysTaught)
            </th>                         
            <th>                          
                @Html.DisplayFor(model => item.numSeats)
            </th>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SectionId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SectionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SectionId })
            </td>
        </tr>
    }
}catch (NullReferenceException)
{
    //do nothing?
}
</table>
